---
import Socials from "./Socials.astro";

const { title, subtitle, description } = Astro.props;
---

<header class="header">
  <div class="header__feature"><slot /></div>
  <h1>{title}</h1>
  <h2>{subtitle}</h2>
  <p>{description}</p>
  <Socials />
</header>

<style>
  .header {
    padding: 2rem var(--padding-layout-inline) 0 var(--padding-layout-inline);
    top: 0;
  }

  .header__feature {
    margin-block-end: 1rem;
  }

  .header h1 {
    margin-block-start: 0;
    margin-block-end: 0.5rem;
  }

  .header h2 {
    margin-block-start: 0;
    margin-block-end: 1rem;
  }

  .header p {
    margin-block-start: 0;
    margin-block-end: 1.5rem;
  }

  @media screen and (min-width: 1280px) {
    .header {
      position: sticky;
      width: 500px;
    }
  }
</style>
