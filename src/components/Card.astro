---
import { Image } from "astro:assets";
import Tag from "./Tag.astro";
import TagList from "./TagList.astro";

const {
  timeframe = null,
  title,
  description,
  imageUrl = null,
  imageAlt = null,
  link,
  tags,
} = Astro.props;
---

<li class="card">
  <a class="card__link" href={link} target="_blank">
    <div>
      {timeframe && <div>{timeframe}</div>}
      <h4>{title}</h4>
      <div>
        {
          imageUrl && imageAlt && (
            <Image
              class="card__image"
              src={imageUrl}
              alt={imageAlt}
              width={400}
              height={260}
            />
          )
        }
        <p>{description}</p>
      </div>
      <TagList>
        {tags.map(tag => <Tag label={tag} />)}
      </TagList>
    </div>
  </a>
</li>

<style>
  .card {
    list-style: none;
    border-radius: 0.5rem;
    padding: 1rem 1.5rem;
  }

  .card:hover {
    background-color: var(--color-hover-background);
  }

  .card__link {
    color: var(--color-text);
    text-decoration: none;
  }
  .card__image {
    max-width: 100%;
    height: auto;
  }
</style>
