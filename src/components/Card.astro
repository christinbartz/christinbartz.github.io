---
import { Image } from "astro:assets";
import Tag from "./Tag.astro";
import TagList from "./TagList.astro";

const {
  timeframe = null,
  title,
  description,
  imageUrl = null,
  imageAlt = null,
  link,
  tags,
} = Astro.props;
---

<li class="card">
  <a class="card__link" href={link} target="_blank">
    {timeframe && <div>{timeframe}</div>}
    <div class="card__content card__content--image">
      {
        imageUrl && imageAlt && (
          <Image
            class="card__image"
            src={imageUrl}
            alt={imageAlt}
            width={400}
            height={260}
          />
        )
      }
      <div class="card__text">
        <h4>{title}</h4>
        <p>{description}</p>
      </div>
    </div>
    <TagList>
      {tags.map(tag => <Tag label={tag} />)}
    </TagList>
  </a>
</li>

<style>
  .card {
    list-style: none;
    border-radius: 0.5rem;
    margin: 0 var(--padding-content-inline);
    cursor: pointer;
    border: 1px solid transparent;
    display: flex;
    row-gap: 1rem;
    border: 1px solid var(--color-hover-border);

    @media screen and (min-width: 768px) {
      margin: 0;
      border-color: transparent;
      padding: var(--padding-content-inline);
    }
  }

  .card:hover {
    @media screen and (min-width: 768px) {
      background-color: var(--color-hover-background);
      border-color: var(--color-hover-border);
    }
  }

  .card__link {
    color: var(--color-text);
    text-decoration: none;
  }

  .card__content--image {
    margin-block-end: 1.25rem;
    display: flex;
    gap: 1.25rem;
    flex-direction: column;
    @media screen and (min-width: 768px) {
      flex-direction: row;
      margin-block-end: 1.5rem;
    }
  }

  .card__image {
    max-width: 100%;
    height: auto;
    border-top-left-radius: 0.5rem;
    border-top-right-radius: 0.5rem;
    @media screen and (min-width: 768px) {
      max-width: 200px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
    }
  }

  .card__text {
    padding: 0 var(--padding-content-inline);
  }

  h4 {
    margin-block-end: 0.5rem;
  }
</style>
